<?xml version="1.0" encoding="UTF-8"?>
<Config>
	
	<Right name="Actions View">
		<Actions>
			<!-- This node should contain actions to be used to generate the top navigation menu -->
			<Action path="menu" />
			<!-- This node should contain actions to be used inside the application as main modules (whole page for edit/add/etc.) -->
			<Action path="modules" />
			<!-- This node should contain actions to be used inside the dash-board of the application as main modules (whole page for edit/add/etc.) -->
			<Action path="dashboard" parent="modules" />
		</Actions>
		
		<Description>Right containing the default actions.
		</Description>
	</Right>
	
</Config>
